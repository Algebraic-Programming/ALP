GRB_INSTALL_PATH="/host/install_lpf"
INCLUDEDIR="/host/install_lpf/include"
BACKENDS=("reference" "reference_omp" "hyperdags" "nonblocking" "bsp1d" "hybrid")
BACKENDCOMPILERS=("/usr/bin/c++" "/usr/bin/c++" "/usr/bin/c++" "/usr/bin/c++" "/alp_deployment/lpf/build_mpich/install/bin/lpfcxx -engine mpimsg" "/alp_deployment/lpf/build_mpich/install/bin/lpfcxx -engine mpimsg")
BACKENDCFLAGS=("-D_GRB_BACKEND=reference" "-D_GRB_BACKEND=reference_omp" "-D_GRB_BACKEND=hyperdags -D_GRB_WITH_HYPERDAGS_USING=reference -D_GRB_WITH_HYPERDAGS" "-D_GRB_BACKEND=nonblocking -D_GRB_WITH_NONBLOCKING" "-D_GRB_WITH_LPF -D_GRB_BACKEND=BSP1D -D_GRB_BSP1D_BACKEND=reference" "-D_GRB_WITH_LPF -D_GRB_BACKEND=BSP1D -D_GRB_BSP1D_BACKEND=reference_omp")
BACKENDLFLAGS=("'/host/install_lpf/lib/sequential/libgraphblas.a' '/host/install_lpf/lib/libalp_utils.a' -lnuma" "'/host/install_lpf/lib/sequential/libgraphblas.a' '/host/install_lpf/lib/libalp_utils.a' -lnuma" "'/host/install_lpf/lib/hyperdags/libgraphblas.a' '/host/install_lpf/lib/libalp_utils.a' -lnuma" "'/host/install_lpf/lib/sequential/libgraphblas.a' '/host/install_lpf/lib/libalp_utils.a' -lnuma" "'/host/install_lpf/lib/spmd/libgraphblas.a' '/host/install_lpf/lib/libalp_utils.a' -lnuma -llpf_hl -lpthread -lm -ldl" "'/host/install_lpf/lib/hybrid/libgraphblas.a' '/host/install_lpf/lib/libalp_utils.a' -lnuma -llpf_hl -lpthread -lm -ldl")
COMMONCFLAGS="-D_GRB_WITH_REFERENCE -D_GRB_WITH_OMP -fopenmp"
VERSION="0.7.0"

declare -a ARGS
LINK=true
SHOW="eval"
BACKEND=${BACKENDS[0]}
CXXSTD=c++11

while [[ $# -gt 0 ]]; do
	option="$1"
	shift;
	case ${option} in
		-b|--backend)
			BACKEND=$1
			shift
		;;
		-c)
			ARGS+=("-c")
			LINK=false
		;;
		--show)
			SHOW=echo
		;;
		--std=*)
			CXXSTD="${option#*=}"
			shift
		;;
		--version)
			echo "This is ALP/GraphBLAS version ${VERSION}"
			echo "This software comes with NO warranty; not even for"
			echo "MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE."
			echo "See the license file for details."
			echo " "
			ARGS+=("${option}")
		;;
		--)
			break
		;;
		*)
			ARGS+=("${option}")
		;;
	esac
done

BACKENDID=-1
for i in "${!BACKENDS[@]}"; do
	if [[ "${BACKENDS[$i]}" = "${BACKEND}" ]]
	then
		BACKENDID=$i
		break
	fi
done

if [[ ${BACKENDID} -eq -1 ]]
then
	echo "Could not find requested backend \`${BACKEND}'"
	exit 255
fi

if [[ ! -d "${INCLUDEDIR}" ]]
then
	echo "Could not find GraphBLAS include directory in ${INCLUDEDIR}"
	exit 255
fi

LFLAGS=
if ${LINK}
then
	LFLAGS=${BACKENDLFLAGS[${BACKENDID}]}
fi

COMPILER=${BACKENDCOMPILERS[${BACKENDID}]}

CMD="${COMPILER} -std=${CXXSTD} -I'${INCLUDEDIR}' ${COMMONCFLAGS} ${BACKENDCFLAGS[${BACKENDID}]} "${ARGS[@]}" "$@" ${LFLAGS}"

${SHOW} "${CMD}"
