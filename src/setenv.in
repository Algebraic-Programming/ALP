if [[ "${ALP_SETENV}" != "1" ]]; then

	export ALP_SETENV="1"

	DEPDIR="@CMAKE_INSTALL_PREFIX@"
	@BACKEND_DIR_LIST@

	LD_LIBRARY_PATH=${DEPDIR}/lib/:${LD_LIBRARY_PATH}
	LIBRARY_PATH=${DEPDIR}/lib/:${LIBRARY_PATH}
	export PATH=${DEPDIR}/bin:${PATH}
	unset DEPDIR

	export LPFRUN="@LPFRUN_CMD_SPACED@"
	export MANUALRUN="@MANUALRUN_SPACED@"
	export BACKENDS=(@AVAILABLE_BACKENDS_SPACED@)

fi
